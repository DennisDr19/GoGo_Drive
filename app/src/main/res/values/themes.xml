<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="Base.Theme.GoGo_Drive" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color primario definido para la aplicación -->


    </style>

    <style name="Theme.GoGo_Drive" parent="Base.Theme.GoGo_Drive" />
    <color name="gogo_blue">#007BFF</color>
    <!-- ESTILOS DEL PANEL DE ADMINISTRADOR -->

    <style name="AdminCardButton" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AdminCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo para el icono dentro de la tarjeta -->
    <style name="AdminCardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:tint">@color/gogo_blue</item>
    </style>

    <!-- Estilo para el texto dentro de la tarjeta -->
    <style name="AdminCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#1E3A5F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Estilo para los títulos de cada sección -->
    <style name="AdminSectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/gogo_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
