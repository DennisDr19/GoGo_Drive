<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Fila 1: Nombre y Rol -->
        <TextView
            android:id="@+id/textView_nombre_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/chip_rol_staff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Dennis Fabricio Apaza" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_rol_staff"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/textView_nombre_staff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_nombre_staff"
            tools:text="ADMIN" />

        <!-- Fila 2: Correo -->
        <ImageView
            android:id="@+id/icon_email_staff"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Icono de correo"
            android:src="@drawable/ic_student"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_nombre_staff"
            app:tint="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textView_correo_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintBottom_toBottomOf="@id/icon_email_staff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_email_staff"
            app:layout_constraintTop_toTopOf="@id/icon_email_staff"
            tools:text="dennis.apaza@example.com" />

        <!-- Fila 3: Teléfono -->
        <ImageView
            android:id="@+id/icon_telefono_staff"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Icono de teléfono"
            android:src="@drawable/ic_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_email_staff"
            app:tint="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textView_telefono_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintBottom_toBottomOf="@id/icon_telefono_staff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_telefono_staff"
            app:layout_constraintTop_toTopOf="@id/icon_telefono_staff"
            tools:text="77712345" />

        <!-- Fila 4: Carnet y Complemento -->
        <ImageView
            android:id="@+id/icon_carnet_staff"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_student"
            app:tint="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/icon_telefono_staff"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Icono de carnet" />

        <TextView
            android:id="@+id/textView_carnet_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/icon_carnet_staff"
            app:layout_constraintStart_toEndOf="@id/icon_carnet_staff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/icon_carnet_staff"
            tools:text="12345678 LP" />

        <!-- Fila 5: Turno -->
        <ImageView
            android:id="@+id/icon_turno_staff"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Icono de turno"
            android:src="@drawable/ic_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_carnet_staff"
            app:tint="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/textView_turno_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintBottom_toBottomOf="@id/icon_turno_staff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_turno_staff"
            app:layout_constraintTop_toTopOf="@id/icon_turno_staff"
            tools:text="Turno: MAÑANA" />

        <!-- Divisor -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_turno_staff" />

        <!-- Acciones -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_acceso_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Acceso"
            android:switchPadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete_staff"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@color/design_default_color_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/switch_acceso_staff"
            app:layout_constraintBottom_toBottomOf="@id/switch_acceso_staff"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_edit_staff"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:layout_constraintEnd_toStartOf="@id/button_delete_staff"
            app:layout_constraintTop_toTopOf="@id/button_delete_staff"
            app:layout_constraintBottom_toBottomOf="@id/button_delete_staff"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
