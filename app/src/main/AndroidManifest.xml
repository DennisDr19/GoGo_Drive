<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoGo_Drive"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaración para la Activity del Administrador -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false" />

        <!-- Declaración para la Activity de registro de Estudiantes -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Declaración para la Activity de registro Staff -->
        <activity
            android:name=".RegisterStaffActivity"
            android:exported="false" />

        <!-- Declaración para la Activity Administracion de Autos -->
        <activity
            android:name=".ManageCarsActivity"
            android:exported="false" />

        <activity
            android:name=".RegisterCarActivity"
            android:exported="false"
            android:label="Registrar Vehículo"
            android:parentActivityName=".ManageCarsActivity" />

        <activity android:name=".ManageLicensesActivity" />

        <activity
            android:name=".ManageStudentActivity"
            android:exported="false"
            android:label="Gestión de Estudiantes"
            android:parentActivityName=".AdminDashboardActivity" />

        <activity
            android:name=".ManageStaffActivity"
            android:exported="false"
            android:label="Gestión de Personal"
            android:parentActivityName=".AdminDashboardActivity" />

    </application>

</manifest>
